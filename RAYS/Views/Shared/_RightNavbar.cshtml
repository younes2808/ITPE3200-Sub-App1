@{
    var activeButton = "";
    var path = Context.Request.Path;

    if (path == "/feed")
    {
        activeButton = "home";
    }
    else if (path.StartsWithSegments("/conversation"))
    {
        activeButton = "messages";
    }
    else if (path == "/friend-requests")
    {
        activeButton = "people";
    }
    else if (path == "/search")
    {
        activeButton = "search";
    }
}

<div class="fixed w-full hidden 200px:w-8 510px:w-16 510px:items-center md:items-start md:w-32 870px:w-36 1150px:w-52 bg-white text-black h-screen 510px:flex flex-col border-l-2 border-r-2 border-gray-200">
    <h1 class="hidden absolute top-4 pt-3 left-0 right-0 text-3xl 510px:block 510px:text-xl md:text-3xl 870px:text-4xl 1150px:text-5xl font-light text-center px-2">RAYS</h1>

    <!-- Static Profile Section -->
    <a href="/profile/staticUserId" class="flex items-center space-x-0 pt-8 p-4 mt-24 md:space-x-4 hover:bg-emerald-50 rounded-lg transition-colors duration-200 w-full">
        <div class="flex items-center justify-center w-10 h-10 md:w-14 md:h-10 870px:w-16 870px:h-12 1150px:w-16 1150px:h-16 rounded-full bg-emerald-200">
            <span class="text-2xl 870px:text-3xl 1150px:text-4xl font-semibold">U</span>
        </div>
        <div>
            <h2 class="text-xs hidden md:-ml-2 md:inline 870px:-ml-0 870px:text-sm 1150px:text-lg font-lexend font-normal">StaticUsername</h2>
            <br />
            <p class="text-xs hidden md:-ml-2 md:inline 870px:-ml-0 870px:text-xs 1150px:text-md font-clash text-gray-400">staticusername</p>
        </div>
    </a>

    <!-- Navigation Menu -->
    <nav class="flex-col flex-grow transition-all duration-300 mt-6 w-full">
        <div class="flex flex-col space-y-4 mb-2">
            <a href="/feed" class="px-2 transition-colors duration-200 @(activeButton == "home" ? "border-b-2 border-emerald-200 border-t-2 bg-emerald-50 font-semibold" : "510px:hover:bg-emerald-100 md:hover:bg-emerald-100")">
                <div class="flex items-center space-x-3 rounded-lg py-2 870px:py-3">
                    <span class="material-icons text-3xl md:text-lg 870px:text-2xl pl-2">home</span>
                    <span class="text-sm 870px:text-lg hidden md:inline transition duration-300 ease-in-out">Home</span>
                </div>
            </a>

            <a href="/conversation/staticUserId" class="px-2 transition-colors duration-200 @(activeButton == "messages" ? "border-b-2 border-emerald-300 border-t-2 bg-emerald-50 font-semibold" : "510px:hover:bg-emerald-100 md:hover:bg-emerald-100")">
                <div class="flex items-center space-x-3 rounded-lg py-2 870px:py-3">
                    <span class="material-icons text-3xl md:text-lg 870px:text-2xl pl-2">message</span>
                    <span class="text-sm 870px:text-lg hidden md:inline transition duration-300 ease-in-out">Messages</span>
                </div>
            </a>

            <a href="/friend-requests" class="px-2 transition-colors duration-200 @(activeButton == "people" ? "border-b-2 border-emerald-300 border-t-2 bg-emerald-50 font-semibold" : "510px:hover:bg-emerald-100 md:hover:bg-emerald-100")">
                <div class="flex items-center space-x-3 rounded-lg py-2 870px:py-3">
                    <span class="material-icons text-3xl md:text-lg 870px:text-2xl pl-2">people</span>
                    <span class="text-sm 870px:text-lg hidden md:inline transition duration-300 ease-in-out">Requests</span>
                </div>
            </a>

            <a href="/search" class="px-2 transition-colors duration-200 @(activeButton == "search" ? "border-b-2 border-emerald-300 border-t-2 bg-emerald-50 font-semibold" : "510px:hover:bg-emerald-100 md:hover:bg-emerald-100")">
                <div class="flex items-center space-x-3 rounded-lg py-2 870px:py-3">
                    <span class="material-icons text-3xl md:text-lg 870px:text-2xl pl-2">search</span>
                    <span class="text-sm 870px:text-lg hidden md:inline transition duration-300 ease-in-out">Search</span>
                </div>
            </a>

            <a href="/logout" class="px-2 transition-colors duration-200 @(activeButton == "logout" ? "border-b-2 border-emerald-300 border-t-2 bg-emerald-50 font-semibold" : "510px:hover:bg-emerald-100 md:hover:bg-emerald-100")">
                <div class="flex items-center space-x-3 rounded-lg py-2 870px:py-3 w-full">
                    <span class="material-icons text-3xl md:text-lg 870px:text-2xl pl-2">logout</span>
                    <span class="text-sm 870px:text-lg hidden md:inline transition duration-300 ease-in-out">Logout</span>
                </div>
            </a>
        </div>
    </nav>
</div>
