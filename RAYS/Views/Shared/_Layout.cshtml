<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RAYS</title>
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> <!-- Legg til Material Icons hvis du bruker dem -->
</head>
<body class="bg-gray-100">
    <!-- Top Bar -->
    <div class="sticky top-0 z-10 bg-white shadow">
        <!-- Her kan du legge til TopBar-innhold, hvis du har det -->
    </div>

    <!-- Hovedcontainer -->
    <div class="flex w-full max-w-[2000px] mx-auto bg-gray-100 min-h-screen">
        <!-- Venstre Navbar -->
        <div class="flex-none">
            <partial name="_LeftNavbar" />
        </div>

        <!-- Hovedinnhold -->
        <div class="flex-grow">
            <main role="main" class="ml-96 mr-96 pb-3 ">
                @RenderBody()
            </main>
        </div>

        <!-- HÃ¸yre Navbar -->
        <div class="flex-none">
            <partial name="_RightNavbar" />
        </div>
    </div>

    <!-- Bunnnavbar -->
    <div class="sticky bottom-0 bg-white shadow">
        <!-- Her kan du legge til BottomNavbar-innhold, hvis du har det -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>