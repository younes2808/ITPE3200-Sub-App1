@{
    var activeButton = "home"; // Set default active button
}

<div class="sticky top-0 left-0 h-screen w-32 bg-white text-black border-r-2 border-gray-200">
    <h1 class="hidden absolute top-0 pt-3 left-0 right-0 text-3xl md:block md:text-3xl font-light text-center px-2">RAYS</h1> <!-- Application Title -->

    <!-- Clickable Profile Section -->
    <button 
        href="/profile/staticUserId"
        class="flex items-center space-x-0 pt-8 p-4 mt-4 md:space-x-4 hover:bg-emerald-50 rounded-lg transition-colors duration-200 w-full">
        <div class="flex items-center justify-center w-10 h-10 md:w-14 md:h-14 rounded-full bg-emerald-200"> <!-- Circle for the profile picture -->
            <span class="text-2xl font-semibold text-black">U</span> <!-- Static first letter of the username -->
        </div>
        <div>
            <h2 class="text-xs hidden md:inline font-lexend font-normal text-black">Username</h2> <!-- Static username display -->
            <br/>
            <p class="text-xs hidden md:inline font-clash text-gray-400">username</p> <!-- Static username as handle -->
        </div>
    </button>

    <!-- Navigation Menu -->
    <nav class="flex-col flex-grow transition-all duration-300 mt-4 w-full">
        <div class="flex flex-col space-y-4 mb-2">
            <!-- Navigation Links -->
            <button 
                href="/feed" 
                class="px-2 transition-colors duration-200 @(activeButton == "home" ? "border-emerald-200 border-t-2 border-b-2 bg-emerald-50 font-semibold" : "hover:bg-emerald-100")"
            >
                <div class="flex items-center space-x-3 rounded-lg py-2">
                    <span class="material-icons text-3xl pl-2 text-black">home</span>
                    <span class="text-sm hidden md:inline transition duration-300 ease-in-out text-black">Home</span>
                </div>
            </button>

            <button  
                href="/conversation/staticUserId" 
                class="px-2 transition-colors duration-200 @(activeButton == "messages" ? "border-emerald-300 border-t-2 border-b-2 bg-emerald-50 font-semibold" : "hover:bg-emerald-100")"
            >
                <div class="flex items-center space-x-3 rounded-lg py-2">
                    <span class="material-icons text-3xl pl-2 text-black">message</span>
                    <span class="text-sm hidden md:inline transition duration-300 ease-in-out text-black">Messages</span>
                </div>
            </button>

            <button  
                href="/friend-requests" 
                class="px-2 transition-colors duration-200 @(activeButton == "people" ? "border-emerald-300 border-t-2 border-b-2 bg-emerald-50 font-semibold" : "hover:bg-emerald-100")"
            >
                <div class="flex items-center space-x-3 rounded-lg py-2">
                    <span class="material-icons text-3xl pl-2 text-black">people</span>
                    <span class="text-sm hidden md:inline transition duration-300 ease-in-out text-black">Requests</span>
                </div>
            </button>

            <button  
                href="/search" 
                class="px-2 transition-colors duration-200 @(activeButton == "search" ? "border-emerald-300 border-t-2 border-b-2 bg-emerald-50 font-semibold" : "hover:bg-emerald-100")"
            >
                <div class="flex items-center space-x-3 rounded-lg py-2">
                    <span class="material-icons text-3xl pl-2 text-black">search</span>
                    <span class="text-sm hidden md:inline transition duration-300 ease-in-out text-black">Search</span>
                </div>
            </button>

            <!-- Logout Button -->
            <form asp-controller="User" asp-action="Logout" method="post" class="w-full">
                <button 
                    type="submit"
                    class="px-2 transition-colors duration-200 @(activeButton == "logout" ? "border-b-2 border-emerald-300 border-t-2 bg-emerald-50 font-semibold" : "hover:bg-emerald-100") w-full"
                >
                    <div class="flex items-center space-x-3 rounded-lg py-2">
                        <span class="material-icons text-3xl pl-2 text-black">logout</span>
                        <span class="text-sm hidden md:inline transition duration-300 ease-in-out text-black">Logout</span>
                    </div>
                </button>
            </form>
        </div>
    </nav>       
</div>