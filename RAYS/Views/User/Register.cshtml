@{
    Layout = null;
}

@model RAYS.ViewModels.RegistrationViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration - RAYS</title>
    <link rel="stylesheet" href="~/css/app.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-emerald-200 flex items-center justify-center min-h-screen px-5">
    <div class="flex flex-col md:flex-row bg-white rounded-2xl shadow-lg overflow-hidden max-w-5xl">

        <!-- Form Section -->
        <div class="flex flex-col justify-center p-8 md:p-14 flex-1">
            <span class="mb-3 text-5xl font-mono">RAYS</span>
            <span class="font-light text-zinc-700 mb-8 border-b-black border-b-2">
                Create Your Account:
            </span>

            <!-- Error message section if there are any errors -->
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <!-- Registration Form -->
            <form asp-controller="User" asp-action="Register" method="post">
                <div class="py-3">
                    <span class="mb-2 text-md">Email</span>
                    <input type="text"
                        class="w-full p-2 border border-gray-200 rounded-md placeholder:font-light focus:ring-emerald-500 placeholder:text-gray-500"
                        asp-for="Email" />
                    <span asp-validation-for="Email" class="text-red-500"></span>
                </div>
                <div class="py-3">
                    <span class="mb-2 text-md">Username</span>
                    <input type="text"
                        class="w-full p-2 border border-gray-200 rounded-md placeholder:font-light focus:ring-emerald-500 placeholder:text-gray-500"
                        asp-for="Username" />
                    <span asp-validation-for="Username" class="text-red-500"></span>
                </div>
                <div class="py-3">
                    <span class="mb-2 text-md">Password</span>
                    <input type="password"
                        class="w-full p-2 border border-gray-200 rounded-md placeholder:font-light focus:ring-emerald-500 placeholder:text-gray-500"
                        asp-for="Password" />
                    <span asp-validation-for="Password" class="text-red-500"></span>
                </div>

                <!-- Sign-Up Button -->
                <button type="submit"
                    class="w-full border border-black bg-black text-white p-2 rounded-lg mb-6 hover:bg-gray-300 hover:text-black hover:border-gray-900">
                    Sign up
                </button>
            </form>

            <p class="text-sm text-center text-gray-600">
                Already have an account? <a asp-controller="User" asp-action="Login"
                    class="text-black font-bold hover:text-gray-500">Sign in here</a>
            </p>
        </div>

        <!-- Image Section -->
        <div class="relative flex-1 hidden md:block">
            <img src="~/images/Login.jpg" alt="Register page background"
                class="w-full h-full object-cover rounded-r-2xl blur-sm" />
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
